<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.app.motel.feature.home.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_nav_home_to_newsFragment"
            app:destination="@id/newsFragment" />
        <action
            android:id="@+id/action_nav_home_to_notifyFragment"
            app:destination="@id/notifyFragment" />
        <action
            android:id="@+id/action_nav_home_to_nav_profile"
            app:destination="@id/nav_profile" />
        <action
            android:id="@+id/action_nav_home_to_boardingHouseListFragment"
            app:destination="@id/boardingHouseListFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_profile"
        android:name="com.app.motel.feature.profile.ProfileFragment"
        android:label="fragment_profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_nav_profile_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_nav_profile_to_newsFragment"
            app:destination="@id/newsFragment" />
        <action
            android:id="@+id/action_nav_profile_to_notifyFragment"
            app:destination="@id/notifyFragment" />
        <action
            android:id="@+id/action_nav_profile_to_boardingHouseListFragment"
            app:destination="@id/boardingHouseListFragment" />
    </fragment>
    <fragment
        android:id="@+id/newsFragment"
        android:name="com.app.motel.feature.news.NewsFragment"
        android:label="fragment_news"
        tools:layout="@layout/fragment_news" >
        <action
            android:id="@+id/action_newsFragment_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_newsFragment_to_notifyFragment"
            app:destination="@id/notifyFragment" />
        <action
            android:id="@+id/action_newsFragment_to_nav_profile"
            app:destination="@id/nav_profile" />
        <action
            android:id="@+id/action_newsFragment_to_boardingHouseListFragment"
            app:destination="@id/boardingHouseListFragment" />
    </fragment>
    <fragment
        android:id="@+id/notifyFragment"
        android:name="com.app.motel.feature.notify.NotifyFragment"
        android:label="fragment_notify"
        tools:layout="@layout/fragment_notify" >
        <action
            android:id="@+id/action_notifyFragment_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_notifyFragment_to_newsFragment"
            app:destination="@id/newsFragment" />
        <action
            android:id="@+id/action_notifyFragment_to_nav_profile"
            app:destination="@id/nav_profile" />
        <action
            android:id="@+id/action_notifyFragment_to_boardingHouseListFragment"
            app:destination="@id/boardingHouseListFragment" />
    </fragment>
    <fragment
        android:id="@+id/boardingHouseListFragment"
        android:name="com.app.motel.feature.boardingHouse.BoardingHouseListFragment"
        android:label="fragment_boarding_house_list"
        tools:layout="@layout/fragment_boarding_house_list" >
        <action
            android:id="@+id/action_boardingHouseListFragment_to_nav_home"
            app:destination="@id/nav_home" />
        <action
            android:id="@+id/action_boardingHouseListFragment_to_notifyFragment"
            app:destination="@id/notifyFragment" />
        <action
            android:id="@+id/action_boardingHouseListFragment_to_nav_profile"
            app:destination="@id/nav_profile" />
        <action
            android:id="@+id/action_boardingHouseListFragment_to_newsFragment"
            app:destination="@id/newsFragment" />
    </fragment>
</navigation>