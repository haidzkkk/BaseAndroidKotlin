<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background2"
    android:paddingHorizontal="@dimen/PADDING_SIZE_DEFAULT"
    tools:context=".feature.home.GeneralBoardingHouseFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/PADDING_SIZE_DEFAULT"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/PADDING_SIZE_DEFAULT"
            android:background="@drawable/background_border_radius_1">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/TEXT_SIZE_LARGE"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:text="Thống kê khu trọ"/>

                <TextView
                    android:id="@+id/tv_name_boarding_house"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/TEXT_SIZE_DEFAULT"
                    android:textAlignment="center"
                    android:layout_marginTop="@dimen/PADDING_SIZE_SMALL"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Khu trọ 1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/TEXT_SIZE_LARGE"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:text="Tổng số phòng"/>

                <TextView
                    android:id="@+id/tv_boarding_house_total_room"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/PADDING_SIZE_SMALL"
                    android:text="10"
                    android:textColor="@color/black"
                    android:textSize="@dimen/TEXT_SIZE_DEFAULT"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/TEXT_SIZE_LARGE"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/PADDING_SIZE_SMALL"
            android:textColor="@color/black"
            android:text="Tổng quan khu trọ"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/TEXT_SIZE_DEFAULT"
            android:textColor="@color/grey"
            android:text="Tổng quan phòng đang cho thuê"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/PADDING_SIZE_SMALL"
            android:weightSum="2">

            <include
                android:id="@+id/ly_room_empty"
                layout="@layout/item_feature_management"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <Space
                android:layout_width="@dimen/PADDING_SIZE_SMALL"
                android:layout_height="wrap_content"/>

            <include
                android:id="@+id/ly_room_renting"
                layout="@layout/item_feature_management"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/PADDING_SIZE_SMALL"
            android:weightSum="2">

            <include
                android:id="@+id/ly_room_near_end"
                layout="@layout/item_feature_management"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

            <Space
                android:layout_width="@dimen/PADDING_SIZE_SMALL"
                android:layout_height="wrap_content"/>

            <include
                android:id="@+id/ly_room_not_pay_bill"
                layout="@layout/item_feature_management"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                />

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/TEXT_SIZE_LARGE"
            android:textStyle="bold"
            android:layout_marginTop="@dimen/PADDING_SIZE_SMALL"
            android:textColor="@color/black"
            android:text="Thông kê tài chính"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/TEXT_SIZE_DEFAULT"
            android:textColor="@color/grey"
            android:text="Thống kê các khooản tiền đang quản lý"/>

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_revenue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="@dimen/RADIUS_DEFAULT"
            android:layout_marginTop="@dimen/PADDING_SIZE_SMALL"
            android:backgroundTint="@color/background1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:padding="@dimen/PADDING_SIZE_SMALL">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon_chart"/>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/PADDING_SIZE_DEFAULT"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/TEXT_SIZE_LARGE"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:text="Doanh thu"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/TEXT_SIZE_DEFAULT"
                        android:textColor="@color/grey"
                        android:text="Tổng tiền theo tháng"/>

                </LinearLayout>

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/baseline_chevron_right_24"
                    />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>