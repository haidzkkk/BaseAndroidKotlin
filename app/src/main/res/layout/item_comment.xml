<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:id="@+id/ly_avatar"
        android:layout_width="@dimen/ICON_SIZE_LARGE"
        android:layout_height="@dimen/ICON_SIZE_LARGE"
        app:cardCornerRadius="1000dp"
        android:layout_marginEnd="@dimen/PADDING_SIZE_SMALL"
        android:background="@drawable/background_circle"
        android:backgroundTint="@color/background2">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/img_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/icon_user"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle"
            tools:ignore="UseAppTint" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ly_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:backgroundTint="@color/background2"
            android:background="@drawable/background_border_radius_2"
            android:paddingHorizontal="@dimen/PADDING_SIZE_DEFAULT"
            android:paddingVertical="@dimen/PADDING_SIZE_SMALL">

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hương giang"
                android:textStyle="bold"
                android:textColor="@color/textColor2"/>

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bài viết thật hay và bổ ích"
                android:textSize="@dimen/TEXT_SIZE_DEFAULT"
                android:textColor="@color/textColor2"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/btn_time"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:textColor="@color/textColor1"
                android:paddingHorizontal="@dimen/PADDING_SIZE_EXTRA_SMALL"
                android:paddingVertical="@dimen/PADDING_SIZE_EXTRA_SMALL"
                android:text="13 giờ trước"/>

            <TextView
                android:id="@+id/btn_like"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/textColor1"
                android:gravity="center"
                android:paddingHorizontal="@dimen/PADDING_SIZE_EXTRA_SMALL"
                android:paddingVertical="@dimen/PADDING_SIZE_EXTRA_SMALL"
                android:text="Thích"/>

            <TextView
                android:id="@+id/btn_reply"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:textColor="@color/textColor1"
                android:layout_height="wrap_content"
                android:paddingHorizontal="@dimen/PADDING_SIZE_EXTRA_SMALL"
                android:paddingVertical="@dimen/PADDING_SIZE_EXTRA_SMALL"
                android:text="Phản hồi"/>


            <LinearLayout
                android:id="@+id/ly_like"
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:gravity="end|center_vertical"
                android:paddingHorizontal="@dimen/PADDING_SIZE_EXTRA_SMALL"
                android:paddingVertical="@dimen/PADDING_SIZE_EXTRA_SMALL">

                <TextView
                    android:id="@+id/tv_count_like"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="textEnd"
                    android:textColor="@color/textColor1"
                    android:paddingHorizontal="@dimen/PADDING_SIZE_EXTRA_SMALL"
                    android:text="1"/>

                <ImageView
                    android:id="@+id/img_like"
                    android:layout_width="@dimen/ICON_SIZE_OVER_SMALL"
                    android:layout_height="@dimen/ICON_SIZE_OVER_SMALL"
                    android:src="@drawable/icon_like"/>

            </LinearLayout>

        </LinearLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv"
            android:paddingHorizontal="@dimen/PADDING_SIZE_DEFAULT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </LinearLayout>

</LinearLayout>