<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:CircleProgressView="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:background="@android:color/white"
    android:clickable="true"
    android:focusable="true">

    <LinearLayout
        android:id="@+id/lyTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">


        <ImageView
            android:id="@+id/ivExpand"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/icons8_plus"
            android:layout_marginHorizontal="16dp"
            />

        <at.grabner.circleprogress.CircleProgressView
            android:id="@+id/processIndicator"
            android:layout_width="40dp"
            android:layout_height="40dp"
            CircleProgressView:cpv_autoTextSize="true"
            CircleProgressView:cpv_barColor="@color/secondary"
            CircleProgressView:cpv_barWidth="35dp"
            CircleProgressView:cpv_maxValue="100"
            CircleProgressView:cpv_outerContourSize="0dp"
            CircleProgressView:cpv_rimColor="@color/purple_200"
            CircleProgressView:cpv_spinColor="@color/secondary"
            CircleProgressView:cpv_textScale="1"
            CircleProgressView:cpv_unitColor="@color/secondaryVariant"
            CircleProgressView:cpv_unitPosition="right_top"
            CircleProgressView:cpv_maxValueAllowed="100"/>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Everyday Objects 1"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="16dp"
            android:textColor="@android:color/black"/>
    </LinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcvLesson"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginTop="7dp"
        android:layout_marginHorizontal="@dimen/PADDING_SIZE_DEFAULT"
        android:layout_below="@+id/lyTitle"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</RelativeLayout>
