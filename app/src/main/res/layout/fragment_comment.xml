<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.app.motel.feature.page.CommentFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv"
        android:paddingHorizontal="@dimen/PADDING_SIZE_DEFAULT"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:overScrollMode="never"
        android:layout_above="@+id/ly_comment"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không có bình luận nào"
        android:textColor="@color/primary"
        android:layout_centerInParent="true"
        />

    <LinearLayout
        android:id="@+id/ly_comment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/PADDING_SIZE_DEFAULT"
        android:layout_marginHorizontal="@dimen/PADDING_SIZE_DEFAULT"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ly_reply"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Đang phản hồi"
                android:layout_marginEnd="@dimen/PADDING_SIZE_EXTRA_SMALL"/>

            <TextView
                android:id="@+id/tv_user_reply"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Do Thanh hai dz"
                android:layout_marginEnd="@dimen/PADDING_SIZE_EXTRA_SMALL"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="• Hủy"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <LinearLayout
                android:id="@+id/ly_avatar"
                android:layout_width="@dimen/ICON_SIZE_LARGE"
                android:layout_height="@dimen/ICON_SIZE_LARGE"
                app:cardCornerRadius="1000dp"
                android:layout_marginEnd="@dimen/PADDING_SIZE_DEFAULT"
                android:elevation="0dp"
                android:background="@drawable/background_circle"
                android:backgroundTint="@color/background2">

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_user"
                    android:tint="@color/primary"
                    app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.App.Circle"
                    tools:ignore="UseAppTint" />

            </LinearLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_comment"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                style="@style/InputLayoutStyle2"
                app:boxStrokeColor="#000000"
                app:endIconDrawable="@drawable/baseline_send_24"
                app:endIconMode="custom"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/txt_comment"
                    android:hint="Viết bình luận"
                    android:imeOptions="actionSend"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>