<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".feature.profile.ProfileFragment">

    <LinearLayout
        android:id="@+id/lvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/PADDING_SIZE_SMALL"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/PADDING_SIZE_DEFAULT"
        >

        <ImageView
            android:layout_width="@dimen/ICON_SIZE_DEFAULT"
            android:layout_height="@dimen/ICON_SIZE_DEFAULT"
            android:layout_gravity="start"
            android:src="@drawable/baseline_arrow_back_24"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icBack"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/PADDING_SIZE_DEFAULT"
            android:textSize="@dimen/FONT_SIZE_DEFAULT"
            android:text="Thông tin của bạn"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/icUser"
        android:layout_width="170dp"
        android:layout_height="170dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/PADDING_SIZE_SUPPER_EXTRA_LARGE"
        android:layout_marginBottom="@dimen/PADDING_SIZE_DEFAULT"
        app:cardCornerRadius="100dp"
        android:elevation="0dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitXY"
            android:src="@drawable/icons8_user" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tvName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/icBack"
        android:textStyle="bold"
        android:textSize="@dimen/FONT_SIZE_EXTRA_OVER_LARGE"
        android:layout_gravity="center"
        android:text="Nguyen van A"/>

    <View
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/red"
        app:cardCornerRadius="@dimen/RADIUS_DEFAULT"
        android:layout_gravity="center"
        android:layout_margin="@dimen/PADDING_SIZE_SUPPER_EXTRA_LARGE"
        >

        <TextView
            android:id="@+id/tvLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đăng xuất"
            android:textStyle="bold"
            android:textSize="@dimen/FONT_SIZE_LARGE"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/PADDING_SIZE_SUPPER_EXTRA_LARGE"
            android:layout_marginVertical="@dimen/PADDING_SIZE_DEFAULT"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>
</LinearLayout>