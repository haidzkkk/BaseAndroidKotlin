<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/PADDING_SIZE_DEFAULT"
    tools:context=".feature.createContract.CreateContractFormFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/PADDING_SIZE_DEFAULT"
            android:layout_marginStart="@dimen/PADDING_SIZE_EXTRA_SMALL"
            style="@style/InputLayoutStyle1"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tên dịch vụ"
                android:imeOptions="actionNext"
                android:inputType="text"
                android:textSize="@dimen/TEXT_SIZE_DEFAULT"
                tools:ignore="SpUsage" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/PADDING_SIZE_DEFAULT"
            android:layout_marginStart="@dimen/PADDING_SIZE_EXTRA_SMALL"
            style="@style/InputLayoutStyle1"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txtlPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Giá dịch vụ"
                android:inputType="number"
                android:imeOptions="actionDone"
                android:textSize="@dimen/TEXT_SIZE_DEFAULT"
                tools:ignore="SpUsage" />
        </com.google.android.material.textfield.TextInputLayout>

        <LinearLayout
            android:id="@+id/lyTypePay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/PADDING_SIZE_DEFAULT"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Loại thành thanh toán"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/TEXT_SIZE_DEFAULT"/>

            <TextView
                android:id="@+id/tvTypePay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tính theo đồng hồ"
                android:layout_marginTop="@dimen/PADDING_SIZE_EXTRA_SMALL"
                android:textColor="@color/grey"
                android:textSize="@dimen/TEXT_SIZE_DEFAULT"/>

        </LinearLayout>


        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_apply_all_room"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:buttonTint="@color/check_box_color_selector"
            android:text="Áp dụng cho tất cả các phòng"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="@dimen/PADDING_SIZE_DEFAULT">

            <Button
                android:id="@+id/btn_save"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Lưu"
                android:textColor="@color/white"
                android:elevation="0dp"
                android:layout_gravity="center_horizontal"
                android:stateListAnimator="@null"
                android:backgroundTint="@color/primary"
                android:background="@drawable/background_button"/>

            <Space
                android:layout_width="@dimen/PADDING_SIZE_EXTRA_SMALL"
                android:layout_height="wrap_content"/>

            <Button
                android:id="@+id/btn_deletel"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Xóa"
                android:textColor="@color/white"
                android:elevation="0dp"
                android:layout_gravity="center_horizontal"
                android:stateListAnimator="@null"
                android:backgroundTint="@color/primary"
                android:background="@drawable/background_button"/>


        </LinearLayout>

    </LinearLayout>


</androidx.core.widget.NestedScrollView>