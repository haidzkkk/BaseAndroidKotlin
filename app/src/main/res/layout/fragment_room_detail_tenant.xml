<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background2"
    android:padding="@dimen/PADDING_SIZE_DEFAULT"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.room.RoomDetailTenantFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ly_empty"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primaryVariant2"
            android:background="@drawable/background_border_radius_3"
            android:padding="@dimen/PADDING_SIZE_DEFAULT"
            android:layout_marginTop="@dimen/PADDING_SIZE_SMALL"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh sách người thuê phòng"
                android:layout_marginEnd="@dimen/PADDING_SIZE_SMALL"
                android:textStyle="bold"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quản lý các thành viên đang thuê tại phòng này"/>

        </LinearLayout>

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/house"
            android:layout_marginTop="@dimen/PADDING_SIZE_SUPPER_EXTRA_LARGE"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chưa có người thuê phòng"
            android:layout_marginTop="@dimen/PADDING_SIZE_DEFAULT"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/TEXT_SIZE_LARGE"
            android:textStyle="bold"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hãy tạo hợp đồng mới để thêm người thuê"
            android:layout_marginTop="@dimen/PADDING_SIZE_DEFAULT"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/TEXT_SIZE_DEFAULT"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_create_contract"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="Tạo hợp đồng"
            android:layout_marginTop="@dimen/PADDING_SIZE_DEFAULT"
            android:paddingHorizontal="@dimen/PADDING_SIZE_DEFAULT"
            android:textColor="@color/white"
            android:elevation="0dp"
            android:layout_gravity="center_horizontal"
            android:stateListAnimator="@null"
            android:background="@drawable/background_button"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/ly_tenant"
        android:layout_width="match_parent"
        android:visibility="gone"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_tenant"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btn_add_tenant"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/baseline_add_24"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            app:borderWidth="0dp"
            android:backgroundTint="@color/primaryVariant"/>


    </RelativeLayout>
</FrameLayout>