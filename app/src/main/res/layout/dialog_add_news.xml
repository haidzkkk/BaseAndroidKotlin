<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/PADDING_SIZE_DEFAULT"
    android:orientation="vertical"
    android:background="@drawable/background_border_radius_1">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tiêu đề"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@style/InputLayoutStyle1"
        app:boxBackgroundColor="@color/background2"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Nhập tiêu dề thông báo"
            android:imeOptions="actionNext"
android:inputType="text"
            android:textSize="@dimen/TEXT_SIZE_DEFAULT"
            tools:ignore="SpUsage" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nội dung"
        android:layout_marginTop="@dimen/PADDING_SIZE_SMALL"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_content"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        style="@style/InputLayoutStyle1"
        app:boxBackgroundColor="@color/background2"
        app:hintEnabled="false">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txt_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="start|top"
            android:imeOptions="actionDone"
            android:inputType="text"
            android:hint="Nhập nội dung thông báo"
            android:textSize="@dimen/TEXT_SIZE_DEFAULT"
            tools:ignore="SpUsage" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/PADDING_SIZE_SMALL"
        android:text="Đối tượng nhận thông báo"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <com.skydoves.powerspinner.PowerSpinnerView
        android:id="@+id/drop_down"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background2"
        android:layout_marginTop="@dimen/PADDING_SIZE_SMALL"
        android:gravity="start|center_vertical"
        android:hint="Tất cả các phòng"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="@dimen/TEXT_SIZE_DEFAULT"
        app:spinner_divider_show="true"
        app:spinner_popup_background="@color/background3" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/PADDING_SIZE_EXTRA_LARGE">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Hủy"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:elevation="0dp"
            android:layout_gravity="center_horizontal"
            android:stateListAnimator="@null"
            android:background="@drawable/background_button"/>

        <View
            android:layout_width="@dimen/PADDING_SIZE_SMALL"
            android:layout_height="0dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Đăng bài"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:elevation="0dp"
            android:layout_gravity="center_horizontal"
            android:stateListAnimator="@null"
            android:background="@drawable/background_button"/>

    </LinearLayout>

</LinearLayout>