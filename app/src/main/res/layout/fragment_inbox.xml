<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.inbox.InboxFragment"
    android:orientation="vertical"
    android:background="@color/background">


    <LinearLayout
        android:id="@+id/lvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/PADDING_SIZE_SMALL"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/PADDING_SIZE_DEFAULT"
        >

        <ImageView
            android:layout_width="@dimen/ICON_SIZE_DEFAULT"
            android:layout_height="@dimen/ICON_SIZE_DEFAULT"
            android:layout_gravity="center"
            android:src="@drawable/baseline_arrow_back_24"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icBack"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/PADDING_SIZE_DEFAULT"
            android:layout_marginEnd="@dimen/PADDING_SIZE_SMALL"
            android:textSize="@dimen/FONT_SIZE_LARGE"
            android:text="Chat with AI"/>

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/gemini_logo"
            android:background="@drawable/background_border_radius_1"
            android:scaleType="fitXY"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingHorizontal="@dimen/PADDING_SIZE_DEFAULT"
        android:layout_weight="1"/>

    <LinearLayout
        android:id="@+id/layout_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="14dp"
        android:gravity="bottom"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/icGuess"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:padding="8dp"
            android:layout_gravity="center"
            android:src="@drawable/icons8_guess"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tilMessage"
                style="@style/InputLayoutChat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:minHeight="38dp"
                android:padding="2dp"
                app:hintEnabled="false">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/edtMessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxHeight="100dp"
                    android:maxLength="1000"
                    android:imeOptions="actionSend"
                    android:inputType="text"
                    android:hint="Nhập tin nhắn..."
                    android:paddingEnd="90dp"
                    android:textSize="14sp" />
            </com.google.android.material.textfield.TextInputLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true">

                <ImageView
                    android:id="@+id/imgMic"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:paddingVertical="10dp"
                    android:paddingStart="10dp"
                    android:layout_margin= "2dp"
                    android:src="@drawable/icons8_mic"/>

                <ImageView
                    android:id="@+id/imgSend"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_gravity="bottom|end"
                    android:padding="10dp"
                    android:layout_margin= "2dp"
                    android:src="@drawable/icons8_send"/>
            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>