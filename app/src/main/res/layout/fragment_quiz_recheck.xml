<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.app.motel.feature.quiz.QuizRecheckFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:backgroundTint="@color/background_permanent_1"
        android:background="@drawable/background_border_radius_2"
        android:layout_margin="@dimen/PADDING_SIZE_DEFAULT">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="72dp">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:padding="@dimen/PADDING_SIZE_DEFAULT"
                android:layout_centerVertical="true"
                android:tint="@color/white"
                android:src="@drawable/icon_back"
                tools:ignore="UseAppTint" />

            <TextView
                android:id="@+id/tv_recheck_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem lại câu hỏi"
                android:textColor="@color/textColor_permanent_1"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginTop="@dimen/PADDING_SIZE_DEFAULT"
                android:layout_marginEnd="@dimen/PADDING_SIZE_DEFAULT"
                android:textSize="@dimen/TEXT_SIZE_LARGE"
                android:layout_alignParentEnd="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nhấp vào các câu hỏi để xem câu trả lời"
                android:textColor="@color/textColor_permanent_2"
                android:layout_marginEnd="@dimen/PADDING_SIZE_DEFAULT"
                android:textStyle="bold"
                android:textSize="@dimen/TEXT_SIZE_DEFAULT"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/tv_recheck_question"
                />

        </RelativeLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv"
            android:padding="@dimen/PADDING_SIZE_DEFAULT"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </LinearLayout>

</FrameLayout>