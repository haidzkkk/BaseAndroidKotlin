<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/PADDING_SIZE_SMALL"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/PADDING_SIZE_DEFAULT"
        >

        <ImageView
            android:layout_width="@dimen/ICON_SIZE_DEFAULT"
            android:layout_height="@dimen/ICON_SIZE_DEFAULT"
            android:layout_gravity="start"
            android:src="@drawable/baseline_arrow_back_24"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icBack"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/PADDING_SIZE_DEFAULT"
            android:textSize="@dimen/FONT_SIZE_LARGE"
            android:text="Name Lesson"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="@dimen/PADDING_SIZE_DEFAULT"
        android:layout_marginHorizontal="@dimen/PADDING_SIZE_DEFAULT"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/secondaryVariant"
            app:cardCornerRadius="@dimen/RADIUS_DEFAULT"
            >

            <LinearLayout
                android:id="@+id/lyPlay"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/PADDING_SIZE_EXTRA_SMALL"
                >

                <ImageView
                    android:id="@+id/icPlay"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/baseline_pause_arrow_24"
                    android:layout_marginEnd="@dimen/PADDING_SIZE_EXTRA_SMALL"
                    />

                <TextView
                    android:id="@+id/tvPlay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Luyện nghe"
                    android:layout_marginEnd="@dimen/PADDING_SIZE_EXTRA_SMALL"
                    android:textColor="@color/white"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginHorizontal="@dimen/PADDING_SIZE_EXTRA_SMALL"/>


                <ImageView
                    android:id="@+id/icOption"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/baseline_arrow_drop_down_24"
                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            />


        <androidx.cardview.widget.CardView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary"
            app:cardCornerRadius="@dimen/RADIUS_DEFAULT"
            >

            <LinearLayout
                android:id="@+id/lyTest"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:layout_margin="@dimen/PADDING_SIZE_EXTRA_SMALL"
                >

                <TextView
                    android:id="@+id/tvTest"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Làm bài tập"
                    android:layout_marginHorizontal="@dimen/PADDING_SIZE_EXTRA_SMALL"
                    android:textColor="@color/white"/>

                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/white"
                    android:layout_marginHorizontal="@dimen/PADDING_SIZE_EXTRA_SMALL"/>


                <ImageView
                    android:id="@+id/icTest"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:src="@drawable/baseline_arrow_right_24"
                    />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <com.google.android.material.divider.MaterialDivider
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background2"
        android:paddingHorizontal="@dimen/PADDING_SIZE_DEFAULT"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

</LinearLayout>