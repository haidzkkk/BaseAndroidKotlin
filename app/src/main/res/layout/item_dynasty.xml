<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_border_radius_1"
    android:backgroundTint="@color/primary"
    android:layout_marginBottom="@dimen/PADDING_SIZE_SMALL"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/ly_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/PADDING_SIZE_EXTRA_SMALL">

        <ImageView
            android:id="@+id/img_select"
            android:layout_width="@dimen/ICON_SIZE_DEFAULT"
            android:layout_height="@dimen/ICON_SIZE_DEFAULT"
            android:src="@drawable/baseline_keyboard_arrow_right_24"
            app:tint="@color/white"
            android:layout_alignParentStart="true"/>

        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="@dimen/TEXT_SIZE_LARGE"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/img_select"
            android:layout_alignParentEnd="true"
            android:gravity="center"
            android:textAlignment="center"
            android:layout_marginEnd="@dimen/ICON_SIZE_DEFAULT"
            android:text="Nhà trần (1224 = 1400)"/>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/background1"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

</LinearLayout>