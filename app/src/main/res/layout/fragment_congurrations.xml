<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/FONT_SIZE_DEFAULT">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/FONT_SIZE_LARGE"
        android:fontFamily="@font/poppins"
        android:textAlignment="center"
        android:text="Bạn đã đăng ký thành công"
        android:layout_marginEnd="110dp"
        android:layout_above="@+id/imgAvatar"
        android:layout_centerHorizontal="true"
        tools:ignore="SpUsage" />

    <ImageView
        android:id="@+id/imgAvatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_gravity="start"
        android:src="@drawable/imoji_yeah"
        android:scaleType="centerCrop"
        android:layout_centerInParent="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/FONT_SIZE_EXTRA_LARGE"
        android:fontFamily="@font/poppins"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textColor="@color/primary"
        android:text="Chiến thôi nào"
        android:layout_marginEnd="110dp"
        android:layout_below="@+id/imgAvatar"
        android:layout_centerHorizontal="true"
        tools:ignore="SpUsage" />

    <Button
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/PADDING_SIZE_LARGE"
        android:text="Về trang chủ"
        android:textColor="@color/white"
        android:elevation="0dp"
        android:stateListAnimator="@null"
        android:textAllCaps="false"
        android:backgroundTint="@color/primary"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_button"/>
</RelativeLayout>