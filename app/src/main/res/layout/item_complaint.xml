<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/PADDING_SIZE_DEFAULT"
    android:layout_marginBottom="@dimen/PADDING_SIZE_DEFAULT"
    android:backgroundTint="@color/primaryVariant2"
    android:background="@drawable/background_border_radius_1">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_room_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Phòng: 101"
            android:textColor="@color/white"
            android:textSize="@dimen/TEXT_SIZE_SMALL"
            android:textStyle="bold"
            android:background="@color/primary"
            android:padding="@dimen/PADDING_SIZE_EXTRA_SMALL"/>

        <TextView
            android:id="@+id/tv_status"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang xử lý"
            android:textSize="@dimen/TEXT_SIZE_SMALL"
            android:layout_marginStart="@dimen/PADDING_SIZE_EXTRA_SMALL"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@color/secondary"
            android:padding="@dimen/PADDING_SIZE_EXTRA_SMALL"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_complaint_user_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nguyen van A"
        android:layout_marginTop="@dimen/PADDING_SIZE_SMALL"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="@dimen/TEXT_SIZE_LARGE"/>

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Vấn đề về đường ống nước"
        android:layout_marginTop="@dimen/PADDING_SIZE_EXTRA_SMALL"
        android:textColor="@color/black"
        android:textSize="@dimen/TEXT_SIZE_DEFAULT"/>

    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Phòng tôi đang bị rò rỉ nước từ vòi trong nhà về sinh. Vui lòng sửa chữa sớm"
        android:textColor="@color/grey"
        android:textSize="@dimen/TEXT_SIZE_DEFAULT"/>

    <LinearLayout
        android:id="@+id/ly_timmer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/PADDING_SIZE_SMALL"
        android:gravity="center_vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/PADDING_SIZE_EXTRA_SMALL"
            android:gravity="center_vertical"
            android:background="@drawable/background_border_radius_border_2">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/icon_timmer"/>

            <TextView
                android:id="@+id/tv_create_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="12:21 - 12/1/2023"
                android:paddingHorizontal="@dimen/PADDING_SIZE_EXTRA_SMALL"
                android:textColor="@color/black"
                android:layout_marginStart="@dimen/PADDING_SIZE_SMALL"
                android:textSize="@dimen/TEXT_SIZE_DEFAULT"/>

        </LinearLayout>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/tv_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xử lý"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:backgroundTint="@color/primary"
            android:background="@drawable/background_border_radius_1"
            android:paddingVertical="@dimen/PADDING_SIZE_EXTRA_SMALL"
            android:paddingHorizontal="@dimen/PADDING_SIZE_EXTRA_LARGE"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ly_cb"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_marginVertical="@dimen/PADDING_SIZE_DEFAULT"
        android:gravity="center">

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_handled"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="@color/black"
            android:buttonTint="@color/check_box_color_selector"
            android:text="Đã xử lý"/>

        <Space
            android:layout_width="@dimen/PADDING_SIZE_DEFAULT"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatCheckBox
            android:id="@+id/cb_waiting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:textColor="@color/black"
            android:buttonTint="@color/check_box_color_selector"
            android:text="Đang chờ"/>

    </LinearLayout>

</LinearLayout>