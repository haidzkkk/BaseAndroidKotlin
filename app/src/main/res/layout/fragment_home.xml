<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background1"
    android:paddingHorizontal="@dimen/PADDING_SIZE_SMALL"
    tools:context=".feature.Home.HomeFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingVertical="@dimen/PADDING_SIZE_DEFAULT"
        android:paddingHorizontal="@dimen/PADDING_SIZE_DEFAULT"
    >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textSize="@dimen/TEXT_SIZE_OVER_LARGE"
                android:textStyle="bold"
                android:text="Chào mừng đến với sử sách!"
                tools:ignore="HardcodedText" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/icon_notification"
                    android:layout_width="@dimen/ICON_SIZE_LARGE"
                    android:layout_height="@dimen/ICON_SIZE_LARGE"
                    android:src="@drawable/icon_notification"
                    android:tint="@color/icon1"
                    tools:ignore="UseAppTint" />

                <TextView
                    android:id="@+id/tv_notify_badge"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:text="1"
                    android:textSize="@dimen/TEXT_SIZE_SMALL"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:layout_gravity="top|end"
                    android:backgroundTint="@color/red"
                    android:background="@drawable/background_circle"
                    android:visibility="gone"/>
            </FrameLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/search_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginVertical="@dimen/PADDING_SIZE_EXTRA_SMALL"
            android:background="@drawable/background_border_search_unfocus"
            android:transitionName="searchTextInput">

            <ImageView
                android:id="@+id/btn_search"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingVertical="@dimen/PADDING_SIZE_DEFAULT"
                android:paddingHorizontal="@dimen/PADDING_SIZE_DEFAULT"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/icon_search"
                tools:ignore="RtlSymmetry" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_saved"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/TEXT_SIZE_LARGE"
            android:textStyle="bold"
            android:layout_marginVertical="@dimen/PADDING_SIZE_EXTRA_SMALL"
            android:text="Đã lưu"
            tools:ignore="HardcodedText" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv_saved"
            android:layout_width="match_parent"
            android:layout_height="120dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/TEXT_SIZE_LARGE"
            android:layout_marginVertical="@dimen/PADDING_SIZE_SMALL"
            android:textStyle="bold"
            android:text="Khám phá"
            tools:ignore="HardcodedText" />

        <androidx.cardview.widget.CardView
            android:id="@+id/btn_time_line_history_vietnam"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            app:cardCornerRadius="16dp">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="fitXY"
                android:src="@drawable/time_line_history_vietnam" />
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/PADDING_SIZE_DEFAULT">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_dainasti_territory"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp"
                app:cardCornerRadius="16dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/dainasti_territory" />
            </androidx.cardview.widget.CardView>

            <View
                android:layout_width="@dimen/PADDING_SIZE_DEFAULT"
                android:layout_height="0dp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_history_character"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="150dp"
                app:cardCornerRadius="16dp">

                <ImageView

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/history_character" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>