<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/ly_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.app.motel.feature.historicalEvent.HistoricalEventActivity">


    <RelativeLayout
        android:id="@+id/ly_toolbar"
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="@dimen/PADDING_SIZE_DEFAULT"
            android:src="@drawable/icon_back"
            android:tint="@color/icon2"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            tools:ignore="RtlSymmetry,UseAppTint" />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="title"
            android:textSize="@dimen/TEXT_SIZE_LARGE"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginTop="@dimen/PADDING_SIZE_EXTRA_SMALL"/>

        <TextView
            android:id="@+id/tv_sub_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="sub title"
            android:textSize="@dimen/TEXT_SIZE_DEFAULT"
            android:layout_below="@+id/tv_title"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/btn_save"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:paddingVertical="@dimen/PADDING_SIZE_OVER_SMALL"
                android:paddingHorizontal="@dimen/PADDING_SIZE_EXTRA_SMALL"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/icon_save"
                />

        </LinearLayout>

    </RelativeLayout>


    <fragment
        android:id="@+id/fragment_view"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:defaultNavHost="true"
        app:navGraph="@navigation/nav_historical_event"/>

</LinearLayout>