<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingHorizontal="@dimen/PADDING_SIZE_DEFAULT"
    android:background="@color/background2"
    tools:context=".feature.createContract.CreateContractListFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Chọn một phòng để lập hợp đồng"
            android:textColor="@color/purple_500"
            android:textStyle="italic"
            android:layout_marginVertical="@dimen/PADDING_SIZE_SMALL"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_empty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Không có phòng nào"
        android:textColor="@color/purple_500"
        android:layout_centerInParent="true"
        android:visibility="gone"
        />

</RelativeLayout>