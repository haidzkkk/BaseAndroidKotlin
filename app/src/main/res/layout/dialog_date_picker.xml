<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/background_border_radius_1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <NumberPicker
            android:id="@+id/picker_from"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="-"
            android:textStyle="bold"
            android:layout_marginHorizontal="@dimen/PADDING_SIZE_DEFAULT"
            android:textSize="@dimen/TEXT_SIZE_EXTRA_OVER_LARGE"/>

        <NumberPicker
            android:id="@+id/picker_to"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:layout_marginBottom="@dimen/PADDING_SIZE_DEFAULT">

        <TextView
            android:id="@+id/tv_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xóa"
            android:textSize="@dimen/TEXT_SIZE_LARGE"
            android:textStyle="bold"
            android:paddingHorizontal="@dimen/PADDING_SIZE_EXTRA_LARGE"
            android:paddingTop="@dimen/PADDING_SIZE_SMALL"
            android:textColor="@color/textColor3"
            />

        <TextView
            android:id="@+id/tv_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận"
            android:textSize="@dimen/TEXT_SIZE_LARGE"
            android:textStyle="bold"
            android:paddingHorizontal="@dimen/PADDING_SIZE_EXTRA_LARGE"
            android:paddingTop="@dimen/PADDING_SIZE_SMALL"
            android:textColor="@color/primary"
            />


    </LinearLayout>



</LinearLayout>