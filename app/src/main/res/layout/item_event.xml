<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginStart="@dimen/PADDING_SIZE_EXTRA_LARGE"
        android:layout_gravity="center">

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="@dimen/PADDING_SIZE_EXTRA_LARGE"
            android:layout_centerHorizontal="true"
            android:background="@color/black"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="@dimen/PADDING_SIZE_DEFAULT"
            android:gravity="center">

            <View
                android:id="@+id/ly_select"
                android:layout_centerInParent="true"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:background="@drawable/background_circle_boder"/>

            <View
                android:layout_centerInParent="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/background_circle"
                android:backgroundTint="@color/primary"/>


        </RelativeLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/PADDING_SIZE_DEFAULT"
        android:paddingBottom="@dimen/PADDING_SIZE_DEFAULT"
        android:layout_weight="1">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1932"
            />

        <TextView
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1932"
            />

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_image"
            android:visibility="gone"
            android:layout_width="130dp"
            android:layout_height="130dp"
            app:cardCornerRadius="1000dp"
            android:layout_gravity="end"
            android:elevation="0dp">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@mipmap/ic_launcher"/>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>