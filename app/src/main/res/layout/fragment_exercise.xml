<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.Lean.ExerciseFragment"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/lvBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/PADDING_SIZE_SMALL"
        android:gravity="center_vertical"
        android:layout_marginHorizontal="@dimen/PADDING_SIZE_DEFAULT"
        >

        <ImageView
            android:layout_width="@dimen/ICON_SIZE_DEFAULT"
            android:layout_height="@dimen/ICON_SIZE_DEFAULT"
            android:layout_gravity="start"
            android:src="@drawable/baseline_arrow_back_24"
            android:scaleType="centerCrop"
            />

        <TextView
            android:id="@+id/tvBack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/icBack"
            android:textStyle="bold"
            android:layout_marginStart="@dimen/PADDING_SIZE_DEFAULT"
            android:textSize="@dimen/FONT_SIZE_DEFAULT"
            android:text="Name Lesson > Commin words > bài tập"/>
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        >

        <ImageView
            android:id="@+id/icEmoji"
            android:layout_width="@dimen/ICON_SIZE_LARGE"
            android:layout_height="@dimen/ICON_SIZE_LARGE"
            android:layout_alignParentStart="true"
            android:src="@drawable/imoji_fun4"
            android:scaleType="centerCrop"
            android:layout_marginStart="@dimen/PADDING_SIZE_DEFAULT"
            android:layout_centerVertical="true"
            />

        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/processIndicator"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:progress="50"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@+id/icEmoji"
            android:layout_toStartOf="@+id/tvProcess"
            android:layout_marginStart="@dimen/PADDING_SIZE_DEFAULT"
            android:layout_marginEnd="@dimen/PADDING_SIZE_EXTRA_LARGE"
            app:trackThickness="@dimen/ICON_SIZE_EXTRA_SMALL"
            app:trackCornerRadius="@dimen/ICON_SIZE_DEFAULT"
            />

        <TextView
            android:id="@+id/tvProcess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="1/12"
            android:textColor="@android:color/black"
            android:textSize="@dimen/FONT_SIZE_DEFAULT"
            android:layout_marginEnd="@dimen/PADDING_SIZE_DEFAULT"
            android:layout_centerVertical="true"
            tools:ignore="SpUsage" />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">

        <ImageView
            android:id="@+id/icHeart1"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icons8_heart"/>
        <ImageView
            android:id="@+id/icHeart2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icons8_heart"/>
        <ImageView
            android:id="@+id/icHeart3"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icons8_heart"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lyQuestion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/PADDING_SIZE_DEFAULT"
        android:padding="@dimen/PADDING_SIZE_DEFAULT"
        android:layout_gravity="center">

        <ImageView
            android:id="@+id/icVolume"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/icons8_volume"/>

        <TextView
            android:id="@+id/tvQuestion"
            android:layout_marginStart="@dimen/PADDING_SIZE_SMALL"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:textSize="@dimen/FONT_SIZE_EXTRA_LARGE"
            android:textStyle="bold"
            android:textColor="@color/black"/>

    </LinearLayout>

    <TextView
        android:layout_marginStart="@dimen/PADDING_SIZE_SMALL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn từ/ cụm phù hợp với hình"
        android:textSize="@dimen/FONT_SIZE_LARGE"
        android:textColor="@color/secondary"/>

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/radioAnswer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:singleSelection="true"
        app:selectionRequired="true"
        android:padding="8dp"
        android:orientation="vertical">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAnswer1"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:strokeWidth="3dp"
            android:textAllCaps="false"
            android:text="run"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAnswer2"
            app:strokeWidth="3dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="walk"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAnswer3"
            app:strokeWidth="3dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="stand"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAnswer4"
            app:strokeWidth="3dp"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAllCaps="false"
            android:text="close"/>
    </com.google.android.material.button.MaterialButtonToggleGroup>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>


    <androidx.cardview.widget.CardView
        android:id="@+id/btnSubmit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/primary"
        app:cardCornerRadius="@dimen/RADIUS_DEFAULT"
        android:layout_gravity="center"
        android:layout_margin="@dimen/PADDING_SIZE_DEFAULT"
        >

        <TextView
            android:id="@+id/tvSubmit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Kiểm tra"
            android:textStyle="bold"
            android:textSize="@dimen/FONT_SIZE_LARGE"
            android:layout_marginHorizontal="@dimen/PADDING_SIZE_SUPPER_EXTRA_LARGE"
            android:layout_marginVertical="@dimen/PADDING_SIZE_DEFAULT"
            android:textColor="@color/white"/>

    </androidx.cardview.widget.CardView>


</LinearLayout>