<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.app.motel.feature.quiz.QuizDashBroadFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp">

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:padding="@dimen/PADDING_SIZE_DEFAULT"
            android:src="@drawable/icon_back"
            android:tint="@color/icon2"
            android:layout_centerVertical="true"
            android:layout_alignParentStart="true"
            tools:ignore="RtlSymmetry,UseAppTint" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true">

            <ImageView
                android:id="@+id/btn_clear"
                android:layout_width="40dp"
                android:layout_height="50dp"
                android:paddingVertical="@dimen/PADDING_SIZE_OVER_SMALL"
                android:paddingHorizontal="@dimen/PADDING_SIZE_EXTRA_SMALL"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/icon_save"
                />

            <ImageView
                android:id="@+id/btn_search"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:paddingVertical="@dimen/PADDING_SIZE_SMALL"
                android:paddingEnd="@dimen/PADDING_SIZE_DEFAULT"
                android:layout_gravity="end|center_vertical"
                android:src="@drawable/icon_share"
                tools:ignore="RtlSymmetry" />

        </LinearLayout>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/PADDING_SIZE_SMALL"
        android:backgroundTint="@color/background2"
        android:padding="@dimen/PADDING_SIZE_EXTRA_LARGE"
        android:background="@drawable/background_border_radius_2">

        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/ic_launcher"/>

        <TextView
            android:id="@+id/tv_tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nhà ngô - nhà đinh"
            android:textStyle="bold"
            android:textAlignment="center"
            android:textColor="@color/primary"
            android:textSize="@dimen/TEXT_SIZE_EXTRA_LARGE"
            android:layout_marginTop="@dimen/PADDING_SIZE_SMALL"/>

        <TextView
            android:id="@+id/tv_period"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(232 - 231)"
            android:textAlignment="center"
            android:textColor="@color/textColor2"
            android:textSize="@dimen/TEXT_SIZE_LARGE"
        />

        <TextView
            android:id="@+id/tv_total_question"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số câu hỏi: 20"
            android:textAlignment="center"
            android:textColor="@color/textColor1"
            android:textSize="@dimen/TEXT_SIZE_EXTRA_LARGE"
            android:layout_marginTop="@dimen/PADDING_SIZE_EXTRA_LARGE"
            />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thời gian: 10 phút"
            android:textAlignment="center"
            android:textColor="@color/textColor1"
            android:textSize="@dimen/TEXT_SIZE_EXTRA_LARGE"
            />

        <View
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_start"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/PADDING_SIZE_DEFAULT"
            android:text="Bắt đầu bài kiểm tra"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:elevation="0dp"
            android:textStyle="bold"
            android:layout_gravity="center_horizontal"
            android:stateListAnimator="@null"
            android:backgroundTint="@color/primaryVariant"
            android:background="@drawable/background_border_radius_2"/>

    </LinearLayout>

</LinearLayout>