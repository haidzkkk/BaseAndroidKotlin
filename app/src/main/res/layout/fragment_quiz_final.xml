<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/PADDING_SIZE_SMALL"
    tools:context="com.app.motel.feature.quiz.QuizFinalFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        tools:ignore="Suspicious0dp">


        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/bg_score"
            android:scaleType="centerCrop"
            android:layout_marginBottom="75dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlayRadiusLarge"
            app:strokeWidth="2dp"/>

        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginVertical="@dimen/PADDING_SIZE_EXTRA_SMALL"
            android:padding="@dimen/PADDING_SIZE_DEFAULT"
            android:tint="@color/white"
            android:src="@drawable/icon_back"
            tools:ignore="UseAppTint" />

        <TextView
            android:id="@+id/view_center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Điểm của bạn"
            android:textStyle="bold"
            android:textSize="@dimen/TEXT_SIZE_DEFAULT"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/tv_score"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100 pt"
            android:textStyle="bold"
            android:textColor="@color/primary"
            android:layout_marginBottom="10dp"
            android:textSize="@dimen/TEXT_SIZE_OVER_OVER_LARGE"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/view_center"
            />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="170dp"
            android:layout_alignParentBottom="true"
            app:cardCornerRadius="@dimen/RADIUS_EXTRA_LARGE"
            app:cardElevation="8dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardUseCompatPadding="true"
            app:cardPreventCornerOverlap="false">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/PADDING_SIZE_DEFAULT">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingVertical="@dimen/PADDING_SIZE_EXTRA_SMALL"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="InefficientWeight,NestedWeights">

                        <View
                            android:id="@+id/dot_process"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="7dp"
                            android:background="@drawable/background_circle"
                            android:backgroundTint="@color/primary"/>

                        <TextView
                            android:id="@+id/tv_process"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="%"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/TEXT_SIZE_LARGE"
                            android:layout_toEndOf="@+id/dot_process"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Hoàn thành"
                            android:textColor="@color/textColor1"
                            android:textSize="@dimen/TEXT_SIZE_DEFAULT"
                            android:layout_toEndOf="@+id/dot_process"
                            android:layout_below="@+id/tv_process"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="InefficientWeight,NestedWeights">

                        <View
                            android:id="@+id/dot_total_question"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="7dp"
                            android:background="@drawable/background_circle"
                            android:backgroundTint="@color/primary"/>

                        <TextView
                            android:id="@+id/tv_total_question"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:textColor="@color/primary"
                            android:textSize="@dimen/TEXT_SIZE_LARGE"
                            android:layout_toEndOf="@+id/dot_total_question"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tổng số câu"
                            android:textColor="@color/textColor1"
                            android:textSize="@dimen/TEXT_SIZE_DEFAULT"
                            android:layout_toEndOf="@+id/dot_total_question"
                            android:layout_below="@+id/tv_total_question"/>

                    </RelativeLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingVertical="@dimen/PADDING_SIZE_EXTRA_SMALL"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="InefficientWeight,NestedWeights">

                        <View
                            android:id="@+id/dot_correct"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="7dp"
                            android:background="@drawable/background_circle"
                            android:backgroundTint="@color/green"/>

                        <TextView
                            android:id="@+id/tv_correct"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="13"
                            android:textColor="@color/green"
                            android:textSize="@dimen/TEXT_SIZE_LARGE"
                            android:layout_toEndOf="@+id/dot_correct"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Đúng"
                            android:textColor="@color/textColor1"
                            android:textSize="@dimen/TEXT_SIZE_DEFAULT"
                            android:layout_toEndOf="@+id/dot_correct"
                            android:layout_below="@+id/tv_correct"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        tools:ignore="InefficientWeight,NestedWeights">

                        <View
                            android:id="@+id/dot_incorrect"
                            android:layout_width="15dp"
                            android:layout_height="15dp"
                            android:layout_marginVertical="4dp"
                            android:layout_marginHorizontal="7dp"
                            android:background="@drawable/background_circle"
                            android:backgroundTint="@color/red"/>

                        <TextView
                            android:id="@+id/tv_incorrect"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="20"
                            android:textColor="@color/red"
                            android:textSize="@dimen/TEXT_SIZE_LARGE"
                            android:layout_toEndOf="@+id/dot_incorrect"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Sai"
                            android:textColor="@color/textColor1"
                            android:textSize="@dimen/TEXT_SIZE_DEFAULT"
                            android:layout_toEndOf="@+id/dot_incorrect"
                            android:layout_below="@+id/tv_incorrect"/>

                    </RelativeLayout>

                </LinearLayout>

            </LinearLayout>


        </androidx.cardview.widget.CardView>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:gravity="center"
        tools:ignore="Suspicious0dp">

        <RelativeLayout
            android:id="@+id/ly_replay"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/PADDING_SIZE_OVER_SMALL"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:id="@+id/btn_replay"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/green"
                android:layout_centerInParent="true"
                android:padding="@dimen/PADDING_SIZE_OVER_SMALL"
                android:background="@drawable/background_circle">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_refresh"
                    android:scaleType="fitCenter"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Chơi lại"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:layout_below="@+id/btn_replay"
                android:textSize="@dimen/TEXT_SIZE_LARGE"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_check_question"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/PADDING_SIZE_OVER_SMALL"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:id="@+id/btn_check_question"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/black"
                android:layout_centerInParent="true"
                android:padding="@dimen/PADDING_SIZE_OVER_SMALL"
                android:background="@drawable/background_circle">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_eye"
                    android:scaleType="fitCenter"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Xem lại câu hỏi"
                android:layout_centerHorizontal="true"
                android:textAlignment="center"
                android:layout_below="@+id/btn_check_question"
                android:textSize="@dimen/TEXT_SIZE_LARGE"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_home"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/PADDING_SIZE_OVER_SMALL"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:id="@+id/btn_home"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/primary"
                android:layout_centerInParent="true"
                android:padding="@dimen/PADDING_SIZE_OVER_SMALL"
                android:background="@drawable/background_circle">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_home3"
                    android:scaleType="fitCenter"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trang chủ"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:layout_below="@+id/btn_home"
                android:textSize="@dimen/TEXT_SIZE_LARGE"/>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/ly_rank"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="@dimen/PADDING_SIZE_OVER_SMALL"
            tools:ignore="NestedWeights">

            <LinearLayout
                android:id="@+id/btn_rank"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:backgroundTint="@color/redPink"
                android:layout_centerInParent="true"
                android:padding="@dimen/PADDING_SIZE_OVER_SMALL"
                android:background="@drawable/background_circle">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/icon_ranking"
                    android:scaleType="fitCenter"/>

            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bảng xếp hạng"
                android:layout_centerInParent="true"
                android:textAlignment="center"
                android:layout_below="@+id/btn_rank"
                android:textSize="@dimen/TEXT_SIZE_LARGE"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>