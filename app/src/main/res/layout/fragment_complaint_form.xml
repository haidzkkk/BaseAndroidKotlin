<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:paddingHorizontal="@dimen/PADDING_SIZE_DEFAULT"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".feature.complaint.ComplaintFormFragment">

    <LinearLayout
        android:layout_marginTop="@dimen/PADDING_SIZE_DEFAULT"
        android:padding="@dimen/PADDING_SIZE_DEFAULT"
        android:background="@drawable/background_border_radius_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tiêu đề khiếu nại"
            android:textSize="@dimen/TEXT_SIZE_LARGE"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/PADDING_SIZE_EXTRA_SMALL"
            style="@style/InputLayoutStyle1"
            app:boxBackgroundColor="@color/background2"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_title"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="Nhập tiêu đề"
                android:imeOptions="actionNext"
android:inputType="text"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/TEXT_SIZE_DEFAULT"
                tools:ignore="SpUsage" />

        </com.google.android.material.textfield.TextInputLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nội dung khiếu nại"
            android:layout_marginTop="@dimen/PADDING_SIZE_DEFAULT"
            android:textSize="@dimen/TEXT_SIZE_LARGE"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="@dimen/PADDING_SIZE_EXTRA_SMALL"
            style="@style/InputLayoutStyle1"
            app:boxBackgroundColor="@color/background2"
            app:hintEnabled="false">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/txt_content"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top|start"
                android:hint="Nhập nội dung"
                android:imeOptions="actionDone"
                android:inputType="text"
                android:textColorHint="@color/grey"
                android:textSize="@dimen/TEXT_SIZE_DEFAULT"
                tools:ignore="SpUsage" />

        </com.google.android.material.textfield.TextInputLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:text="Giử khiếu nại"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/PADDING_SIZE_SMALL"
            android:textColor="@color/white"
            android:elevation="0dp"
            android:layout_gravity="center_horizontal"
            android:stateListAnimator="@null"
            android:backgroundTint="@color/black"
            android:background="@drawable/background_button"/>


    </LinearLayout>

</LinearLayout>