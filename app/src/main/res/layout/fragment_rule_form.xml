<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".feature.rules.RuleFormFragment">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingHorizontal="@dimen/PADDING_SIZE_DEFAULT"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Các quy định khác"
            android:layout_marginTop="@dimen/PADDING_SIZE_DEFAULT"
            android:textSize="@dimen/TEXT_SIZE_LARGE"
            android:textStyle="bold"
            android:layout_gravity="start"
            android:textColor="@color/black"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rcv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/PADDING_SIZE_SMALL"
            android:paddingHorizontal="@dimen/PADDING_SIZE_DEFAULT"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />

        <TextView
            android:id="@+id/tv_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Không có quy định nào"
            android:textColor="@color/purple_500"
            android:layout_margin="@dimen/PADDING_SIZE_DEFAULT"
            android:visibility="gone"
            />


        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_add"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Thêm quy định khác"
            android:paddingHorizontal="@dimen/PADDING_SIZE_DEFAULT"
            android:drawableStart="@drawable/baseline_add_24"
            android:drawableTint="@color/primary"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/PADDING_SIZE_DEFAULT"
            android:textColor="@color/primary"
            android:elevation="0dp"
            android:layout_gravity="center_horizontal"
            android:stateListAnimator="@null"
            android:background="@drawable/background_button_border"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Lưu thay đổi"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/PADDING_SIZE_EXTRA_LARGE"
            android:textColor="@color/white"
            android:elevation="0dp"
            android:layout_gravity="center_horizontal"
            android:stateListAnimator="@null"
            android:background="@drawable/background_button"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>