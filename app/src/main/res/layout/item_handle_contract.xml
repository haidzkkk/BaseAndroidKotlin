<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background1"
    app:cardCornerRadius="@dimen/RADIUS_DEFAULT"
    android:layout_margin="@dimen/PADDING_SIZE_DEFAULT">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/PADDING_SIZE_SMALL">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng trọ: "
                android:textSize="@dimen/TEXT_SIZE_LARGE"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/tv_room_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phòng 001"
                android:textColor="@color/red"
                android:textSize="@dimen/TEXT_SIZE_LARGE"
                android:textStyle="bold"/>

        </LinearLayout>

        <com.google.android.material.divider.MaterialDivider
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="@dimen/PADDING_SIZE_SMALL"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingHorizontal="@dimen/PADDING_SIZE_EXTRA_SMALL"
            android:paddingTop="@dimen/PADDING_SIZE_SMALL"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/house"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="@dimen/RADIUS_DEFAULT">

                <TextView
                    android:id="@+id/tv_tanant_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Họ và tên: "
                    android:textSize="@dimen/TEXT_SIZE_LARGE"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/tv_state"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/green"
                    android:textStyle="bold"
                    android:text="Tình trạng hợp đồng: "
                    android:textSize="@dimen/TEXT_SIZE_DEFAULT"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="2dp"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/contract"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Chi tiết hợp đồng"
                        android:textColor="@color/black"
                        android:layout_marginStart="3dp"
                        android:textSize="@dimen/TEXT_SIZE_DEFAULT"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/PADDING_SIZE_SMALL">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_end"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Kết thúc"
                        android:textColor="@color/white"
                        android:elevation="0dp"
                        android:paddingStart="@dimen/PADDING_SIZE_SMALL"
                        android:layout_gravity="center_horizontal"
                        android:stateListAnimator="@null"
                        android:drawableTint="@color/white"
                        android:drawableStart="@drawable/baseline_close_24"
                        android:backgroundTint="@color/red"
                        android:background="@drawable/background_button"/>

                    <View
                        android:id="@+id/space_btn"
                        android:layout_width="@dimen/PADDING_SIZE_SMALL"
                        android:layout_height="0dp"/>

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_refresh"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:layout_weight="1"
                        android:text="Gia hạn"
                        android:textColor="@color/white"
                        android:elevation="0dp"
                        android:paddingStart="@dimen/PADDING_SIZE_SMALL"
                        android:layout_gravity="center_horizontal"
                        android:stateListAnimator="@null"
                        android:drawableTint="@color/white"
                        android:drawableStart="@drawable/baseline_refresh_24"
                        android:backgroundTint="@color/blue"
                        android:background="@drawable/background_button"/>
                </LinearLayout>

                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="@dimen/PADDING_SIZE_SMALL"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/PADDING_SIZE_SMALL"
            android:background="@drawable/background_border_radius_2"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="3"
            android:layout_marginVertical="@dimen/PADDING_SIZE_DEFAULT"
            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày lập"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_date_create"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20/07/2023"
                    android:textColor="#555555"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="8dp"
                android:background="#BBBBBB" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày ở"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_date_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20/07/2023"
                    android:textColor="#555555"
                    android:textSize="14sp" />
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_marginHorizontal="8dp"
                android:background="#BBBBBB" />

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="start">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ngày kết thúc"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_date_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="09/04/2024"
                    android:textColor="#555555"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</androidx.cardview.widget.CardView>