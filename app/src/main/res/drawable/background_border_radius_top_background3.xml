<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item>
    <shape android:shape="rectangle">
        <solid android:color="@color/background3" />
        <corners android:topLeftRadius="@dimen/RADIUS_DEFAULT" android:topRightRadius="@dimen/RADIUS_DEFAULT"/>
    </shape>
</item>

<item android:left="1dp" android:right="1dp" android:top="1dp" android:bottom="1dp">
    <shape android:shape="rectangle">
        <corners android:topLeftRadius="@dimen/RADIUS_DEFAULT" android:topRightRadius="@dimen/RADIUS_DEFAULT"/>
        <solid android:color="@android:color/transparent"/>
    </shape>
</item>

</layer-list>
